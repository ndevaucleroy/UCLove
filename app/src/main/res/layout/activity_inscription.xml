<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="#ffc1c1"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/beer"
        android:layout_margin="20dp"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="#55ffc1c1"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:text="Welcome"
            android:textAllCaps="true"
            android:textSize="45sp"
            android:id="@+id/headText"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            />
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
                android:layout_weight="0.75"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.375"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="name"
                    android:textSize="25sp"
                    android:id="@+id/name"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="firstName"
                    android:textSize="25sp"
                    android:id="@+id/firstName"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="orientation"
                    android:textSize="25sp"
                    android:id="@+id/orientation"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Place"
                    android:textSize="25sp"
                    android:id="@+id/place"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Birthday"
                    android:textSize="25sp"
                    android:id="@+id/birthday"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Eyes Color"
                    android:textSize="25sp"
                    android:id="@+id/eyes"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Hair Color"
                    android:textSize="25sp"
                    android:id="@+id/hair"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Gender"
                    android:textSize="25sp"
                    android:id="@+id/gender"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>

</LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.425"
                android:orientation="vertical">
                <EditText
                    android:background="#aaffd1d1"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/editName"
                    android:hint="Your Name"/>
                <EditText
                    android:background="#aaffd1d1"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/editFirstName"
                    android:hint="Your First Name"/>
                <EditText
                    android:background="#aaffd1d1"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/editOrientation"
                    android:hint="Your Orientation"/>
                <EditText
                    android:background="#aaffd1d1"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/editPlace"
                    android:hint="Your Place"/>
                <EditText
                    android:background="#aaffd1d1"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/editBirthday"
                    android:hint="Your Birthday"/>
                <EditText
                    android:background="#aaffd1d1"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/editEye"
                    android:hint="Your Eyes Color"/>
                <EditText
                    android:background="#aaffd1d1"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/editHair"
                    android:hint="Your Hair Color"/>
                <EditText
                    android:background="#aaffd1d1"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/editGender"
                    android:hint="Your Gender"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:layout_margin="10dp"
            android:text="Proceed to Search Preference"
            android:textSize="20sp"
            android:background="#e36899"/>
        </LinearLayout>
    </RelativeLayout>