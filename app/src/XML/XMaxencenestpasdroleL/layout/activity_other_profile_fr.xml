<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ffc1c1"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#ff5555"
        android:orientation="horizontal"
        android:layout_weight="0.1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:id="@+id/YesOrNo"
            android:scaleType="fitCenter"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top"/>

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:background="#ffc1c1"
            android:id="@+id/FriendsRequests"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:id="@+id/Friends"
            android:scaleType="fitCenter"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:id="@+id/Profile"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top"/>

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:id="@+id/Settings"
            android:src="@drawable/beer"
            android:scaleType="fitCenter"
            android:layout_weight="0.2"
            android:layout_gravity="top" />
    </LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:text="Son Profil"
            android:textAllCaps="true"
            android:textSize="45sp"
            android:id="@+id/headText"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/linearLayout3"
        android:orientation="horizontal"
        android:layout_weight="0.45">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/acceptable"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/sublinearLayout31"
            android:orientation="vertical"
            android:layout_weight="0.4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"

                android:textSize="25sp"
                android:id="@+id/name"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="firstName"

                android:textSize="25sp"
                android:id="@+id/firstName"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="orientation"

                android:textSize="25sp"
                android:id="@+id/orientation"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"

                android:textSize="25sp"
                android:id="@+id/place"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday"

                android:textSize="25sp"
                android:id="@+id/birthday"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:text="Super description tres tres longue"
            android:textSize="25sp"
            android:id="@+id/description"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
      android:layout_margin="10dp"
    android:orientation="horizontal"
    android:layout_weight="0.1">
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/beer"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/beer"/>
</LinearLayout>

</LinearLayout>