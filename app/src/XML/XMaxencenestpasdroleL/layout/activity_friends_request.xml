<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ffc1c1"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#ff5555"
        android:orientation="horizontal"
        android:layout_weight="0.1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:id="@+id/YesOrNo"
            android:scaleType="fitCenter"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top"/>

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:background="#ffc1c1"
            android:id="@+id/FriendsRequests"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:id="@+id/Friends"
            android:scaleType="fitCenter"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:id="@+id/Profile"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top"/>

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:id="@+id/Settings"
            android:src="@drawable/beer"
            android:scaleType="fitCenter"
            android:layout_weight="0.2"
            android:layout_gravity="top" />
    </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Friends Request"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:id="@+id/headText"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_weight="0.1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.075"
            android:text="First Name"
            android:textSize="30sp"
            android:id="@+id/firstName"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.625">
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/acceptable"
            android:id="@+id/otherProfile"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="No other friend request :^("
            android:id="@+id/noFound"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#000000"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_weight="0.1">
            <ImageButton
                android:layout_width="0dp"
                android:id="@+id/no"
                android:scaleType="fitCenter"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/beer"/>
            <ImageButton
                android:layout_width="0dp"
                android:id="@+id/yes"
                android:scaleType="fitCenter"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/beer"/>
        </LinearLayout>
    </LinearLayout>