<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background= "#ffc1c1"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#ff5555"
        android:orientation="horizontal"
        android:layout_weight="0.1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:id="@+id/YesOrNo"
            android:scaleType="fitCenter"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top"/>

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:id="@+id/FriendsRequests"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:id="@+id/Friends"
            android:scaleType="fitCenter"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:id="@+id/Profile"
            android:src="@drawable/beer"
            android:layout_weight="0.2"
            android:layout_gravity="top"/>

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="#ffc1c1"
            android:id="@+id/Settings"
            android:src="@drawable/beer"
            android:scaleType="fitCenter"
            android:layout_weight="0.2"
            android:layout_gravity="top" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="App Settings"
        android:textAllCaps="true"
        android:textSize="45sp"
        android:id="@+id/headText"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.8">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Language"
                android:textSize="25sp"
                android:id="@+id/language"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Password"
                android:textSize="25sp"
                android:id="@+id/password"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Confirm"
                android:textSize="25sp"
                android:id="@+id/confirm"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Theme"
                android:textSize="25sp"
                android:id="@+id/theme"
                android:gravity="center_vertical"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.45"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <Spinner
                android:background="#ffd1d1"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/languageSpinner"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <EditText
                android:background="#ffd1d1"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/changePassword"
                android:hint="New Password"/>
            <EditText
                android:background="#ffd1d1"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/confirmChangePassword"
                android:hint="Confirm Password"/>
            <Spinner
                android:background="#ffd1d1"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/themeSpinner"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:id="@+id/confirm1"
                android:src="@drawable/beer"
                android:layout_weight="2"
                android:layout_gravity="top"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"></LinearLayout>
            <ImageButton
                android:layout_width="fill_parent"
                android:scaleType="fitCenter"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:id="@+id/confirm3"
                android:src="@drawable/beer"
                android:layout_weight="2"
                android:layout_gravity="top"/>
            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:id="@+id/confirm4"
                android:src="@drawable/beer"
                android:layout_weight="2"
                android:layout_gravity="top"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>